<div class="bannerslider4 banner-slider home-slider" data-pauseonhover="{{settings.slide_pauseOnHover}}" data-autoplay="{{settings.slide_autoplay}}" data-speed="{{settings.slide_speed}}">
  <div class="container">
    <div class="slider-tab">
    <ul class="bxslider">
      {% for i in (1..3) %}
      {% capture slide %}slide_{{ i }}{% endcapture %}
      

       {% if settings.slider4_img_set %}
        {% capture slide_img %}slide_{{settings.slider4_img_set}}_{{ i }}.jpg{% endcapture %}
      {% endif %}

      {% capture slide_icon %}slide_{{ i }}_icon{% endcapture %}
      {% capture slide_icon_img %}slide_{{ i }}_icon_img.png{% endcapture %}    
      {% capture slide_title1 %}slide_{{ i }}_title_1{% endcapture %}
      {% capture slide_title2 %}slide_{{ i }}_title_2{% endcapture %}
      {% capture slide_text %}slide_{{ i }}_text{% endcapture %}
      {% capture slide_button %}slide_{{ i }}_button{% endcapture %}
      {% capture slide_link %}slide_{{ i }}_link{% endcapture %}

      {% if settings[slide] %}
        <li>
          {%comment%}
         {% if settings[slide_video] != blank %}
          <video class="slide-video" poster="{{ slide_img | asset_url  }}" preload="auto" autoplay="" loop="loop" muted="muted">
            <source src="{{settings[slide_video]}}" type="video/mp4">
          </video>
          {% endif %}  
          {%endcomment%}
          <div class="img" style="background-image: url('{{slide_img | asset_url}}');" ></div>
          
        </li>
     {% endif %}

    {% endfor %}
    </ul>
    
    <div id="bx-pager">
     {% for i in (1..3) %}
      {% capture slide %}slide_{{ i }}{% endcapture %}
      {% capture slide_title1 %}slide_{{ i }}_title_1{% endcapture %}
       {% if settings[slide] %}

        <a data-slide-index="{{ i | minus:1 }}" href="">
          {% if settings[slide_title1] != blank  %}
            {{ settings[slide_title1] }}
          {% endif %}
        </a>
       {% endif %}
    {% endfor %}
    </div>

    </div>
  </div>
</div>

