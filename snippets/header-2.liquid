{% include 'header-top-bar--welcome' %}
{% include 'header-top-bar--setting' %}
<div class="header header2">
  <div class="container">
      <div class ="header__logo-wrapper">
        {% include 'header-logo' %}
      </div>
      <div class="mainmenu pull-left">
        {% include 'nav' class: 'dropdownMenu ', handle: settings.header_main_menu , hot_label_enable: true %}
        <div class="mobile-menu">
          <a href="#" class="show-menu"><span class="lnr lnr-indent-decrease"></span></a>
          <a href="#" class="hide-menu"><span class="lnr lnr-indent-increase"></span></a>
        </div>
      </div>
      <div class="pull-right">
        <div class="info-header info-header2">
          <ul class="info-total">
            {% if settings.header_search_enable %}
            <li class="info-search">
              <a href="#" class="info-icon icon-search"><span class="lnr lnr-magnifier"></span></a>
              {% include 'search-bar-2' %}
            </li>
            {% endif %}
          </ul>
        </div>
      </div>
  </div>
</div>