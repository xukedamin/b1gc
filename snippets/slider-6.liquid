
<div class="bannerslider6 banner-slider owl-arrow-banner slider-owl-single-item-nav-chevron slider--background-dark"  data-pauseonhover="{{settings.slide_pauseOnHover}}"
data-autoplay="{{settings.slide_autoplay}}" data-speed="{{settings.slide_speed}}" data-time="{{settings.slide_time}}">
  <div class="wrap-item">
  {% for i in (1..4) %}
  {% capture slide %}slide_{{ i }}{% endcapture %}

 {% if settings.slider6_img_set %}
    {% capture slide_img %}slide_{{settings.slider6_img_set}}_{{ i }}.jpg{% endcapture %}
  {% endif %}

  {% capture slide_icon %}slide_{{ i }}_icon{% endcapture %}
  {% capture slide_icon_img %}slide_{{ i }}_icon_img.png{% endcapture %}    
  {% capture slide_title1 %}slide_{{ i }}_title_1{% endcapture %}
  {% capture slide_title2 %}slide_{{ i }}_title_2{% endcapture %}
  {% capture slide_text %}slide_{{ i }}_text{% endcapture %}
  {% capture slide_button %}slide_{{ i }}_button{% endcapture %}
  {% capture slide_link %}slide_{{ i }}_link{% endcapture %}

  {% if settings[slide] %}

   <div class="item">
    <div class="content-banner-slider">
      <a href="{{settings[slide_link] |  url_param_escape}}" class="banner-thumb-link">
        <div class="img" style="background-image: url('{{slide_img | asset_url}}');" ></div>
      </a>
      <div class="banner-info">
        <div class="container">
           {% if settings[slide_video] != blank %}
            <video class="slide-video" poster="{{ slide_img | asset_url  }}" preload="auto" autoplay="" loop="loop" muted="muted">
              <source src="{{settings[slide_video]}}" type="video/mp4">
            </video>
            {% endif %}

          <div class="banner-info-text">
            {% if settings[slide_icon] != blank  %}
              <span class="heading-icon size-70  {{ settings[slide_icon] }} "></span>
            {% endif %}
           {% if settings[slide_title1] != blank  %}
              <h4>{{settings[slide_title1]}}</h4>
            {% endif %}
            {% if settings[slide_title2] != blank  %}
              <h2>{{settings[slide_title2]}}</h2>
            {% endif %}
            {% if settings[slide_text] != blank  %}
              <h4>{{settings[slide_text]}}</h4>
            {% endif %}
            {% if settings[slide_button] != blank  %}
              <a href="#" class="btn-link-default banner-link">{{settings[slide_button]}}</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>

  {% endif %}
  {% endfor %}
        
   </div>
  </div>




