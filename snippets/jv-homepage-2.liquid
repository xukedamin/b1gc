<main class="wrapper main-content homepage2" role="main">
  {% if settings.slider_home_enable %}
    {% capture slider %}slider-{{settings.home2_slide_style}}{% endcapture %}
    {% include slider  %}
  {% endif %}


  {% comment %}
  jv-sc-feature-locator 
  Block Banner jv-sc-banner-4 
  Block News Product 
  Block Friends Brands 
  Block Popular blog
  jv-sc-logopartner
  {% endcomment %}
   
  {% assign homenum = 'home2' %}
  {%assign pos_length = 7 %}

  {%include 'jv-sub-homepage' %}

  tabs-grid
  {%include 'jv-sc-product-tabs-grid' %}
  
  slider-grid
  {%include 'jv-sc-product-slider-grid' %}
  
  grid-simple style 1
  {%include 'jv-sc-product-tabs-grid-simple' with tab_style:'1',product_paginav:true, product_loadmore:false, product_desc_enable: false %}
  
  grid-simple style 2
  {%include 'jv-sc-product-tabs-grid-simple' with tab_style:'2',product_paginav:false, product_loadmore:true, product_desc_enable: true %}
  
  grid-simple style 3
  {%include 'jv-sc-product-tabs-grid-simple' with tab_style:'3',product_paginav:false, product_loadmore:true, product_desc_enable: false %}



  {% unless settings.home2_content == blank or pages[settings.home2_content].empty? or pages[settings.home2_content].content == blank %}
  {% assign page = pages[settings.home2_content] %}
  <div class="container">
    {{ page.content }}
  </div>
  <hr>
  {% endunless %}

</main>     
