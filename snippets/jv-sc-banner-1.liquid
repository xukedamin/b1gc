{%assign banner_name = 'banner1' %}

  {% assign blogs_list_grids = settings.banner_1_data_blog %}
  {% assign sourcedata = blogs[blogs_list_grids] %}


   {% for article in sourcedata.articles %}
    {{article.content}}
    <br/>
    {% if article.content contains '[jvbanner]' %}
          {% assign temp = article.content | split:'[/jvbanner]' | first %}
          {% assign bannercode = temp | split:'[jvbanner]' | last %}

          {% assign des = article.content | split:'[/jvbanner]' | last %}
          
          <p>Code: {{bannercode }}</p>

          {% assign temp = bannercode | split:'[/title]' | first %}
          {% assign bannertitle = temp | split:'[title]' | last %}

          <p>title {{bannertitle}}</p>

          {% assign temp = bannercode | split:'[/content]' | first %}
          {% assign bannercontent = temp | split:'[content]' | last %}

          <p>{{bannercontent}}</p>



        {%else %}
          {{ article.content | split: '|' | first | strip_html | truncatewords: 50 }}
      {%endif %}

      {{ article | img_url: '1024x1024' | img_tag: image_alt, 'article__image' | link_to: article.url }}

  {%endfor %}

<div class="row">
 {% for i in (1..3) %}

 {% capture banner_enable %}{{banner_name}}_item_{{i}}{% endcapture %}

  {%if settings[banner_enable] %}
    {% capture banner_img %}{{banner_name}}_item_{{ i }}_img.png{% endcapture %}
    {% capture banner_title %}{{banner_name}}_item_{{ i }}_title{% endcapture %}
    {% capture banner_subtitle %}{{banner_name}}_item_{{ i }}_subtitle{% endcapture %}
    {% capture banner_text %}{{banner_name}}_item_{{ i }}_text{% endcapture %}
    {% capture banner_btn %}{{banner_name}}_item_{{ i }}_btn{% endcapture %}
    {% capture banner_link %}{{banner_name}}_item_{{ i }}_link{% endcapture %}

    {% assign class_item = 'box-left' %}
    {% if i == 2 %}
      {% assign class_item = 'box-center'%}
    {% elsif i == 3 %}
      {% assign class_item = 'box-right'%}
    {% endif %}

  <div class="col-md-4 col-sm-4 col-xs-12">
    <div class="banner-box banner-style1 {{class_item}}">
      <a href="{{banner_link}}" class="banner-box-link">
        {{ banner_img | asset_url | img_tag: banner_img }}
      </a>
      <div class="banner-box-info">
          
        {% if settings[banner_title] != blank  %}
          <h2 class="title-banner-box-yellow"><span>{{ settings[banner_title] }}</span></h2>
        {% endif %}

        {% if settings[banner_subtitle] != blank %}
          <h2 class="title-banner-box-blue"><span>{{settings[banner_subtitle]}}</span></h2>
        {% endif %} 

        {% if settings[banner_text]  != blank %}
        <p class="desc">{{ settings[banner_text] }}</p>
        {% endif %}

        {% if settings[banner_btn]  != blank %}
        <a href="{{ settings[banner_link] }}" class="btn-box-banner">{{ settings[banner_btn] }}</a>                            
        {% endif %}   

      </div>
    </div>
  </div>

   {% endif %}   

{% endfor %}

</div>
