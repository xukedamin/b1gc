{% assign blog_title = settings.home_blog_title %}
{% assign blog_text = settings.home_blog_text %}

{% assign blogs_list_grids = settings.home_blog %}
{% assign limit_item = settings.home_blog_number | plus: 0 %}

{% assign blog = blogs[blogs_list_grids] %}

<div class="popular-post-grid slider-4-items">
  <div class="container">
    <div class="box-intro">
     {% if blog_title != blank %}
      <h2><span class="title">{{ blog_title }}</span></h2>
       {% endif %}
       {% if blog_text != blank %}
      <span class="desc-title">{{ blog_text }}</span>
       {% endif %}
    </div>
  
     <div class="paginav-slider">
      <div class="wrap-item">

          {% for article in blog.articles limit:limit_item %}
          <div class="item">
            <div class="item-popular">
              <div class="item-popular-thumb">
                  <a href="{{ article.url }}" class="item-popular-thumb-link">
                     {{ article | img_url: '1024x1024' | img_tag: image_alt, 'article__image' }}
                  </a>
              </div>
              <div class="item-popular-info">
                <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
                {% if article.content != blank %}
                <p> {{ article.content| strip_html | truncate: 90 }}</p>
                {% endif %}
                
                <div class="popular-post-date">
                  <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-6">
                      <span class="lnr lnr-calendar-full"></span>
                      <time  datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'mm_dd_yy' }}</time>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-6">
                      <a href="{{ article.url }}" class="readmore"><span class="lnr lnr-arrow-right-circle"></span> {{'blogs.article.read_more' | t}}</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
        <!-- end item -->
        {% endfor %}

      </div>
      <!-- end wrap-item -->
    </div>
  </div>
</div>
<!-- End Popular Post -->