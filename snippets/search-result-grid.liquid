{% unless grid_item_width %}
{% assign grid_item_width = 'col-md-4 col-sm-6 col-xs-12' %}
{% endunless %}

{% unless current_collection %}
{% assign current_collection = collection %}
{% endunless %}

{% assign on_sale = false %}
{% if item.compare_at_price > item.price %}
{% assign on_sale = true %}
{% endif %}

{% assign sold_out = true %}
{% if item.available %}
{% assign sold_out = false %}
{% endif %}

{% assign image_size = settings.collection_prod_image_sizes %}

<div class="product-grid-item {{ grid_item_width }}{% if sold_out %} sold-out{% endif %}{% if on_sale %} on-sale{% endif %}">
  
  <div class="item-product">
  <div class="item-product-thumb">
    <a class="product-thumb-link" href="{{ product.url | within: current_collection }}">

      {% if item.featured_image %}
        <img src="{{ item.featured_image.src | img_url: image_size }}" alt="{{ item.featured_image.alt | escape }}">
      {% else %}   
        <img src="{{ 'no_image.png' | asset_url }}" alt="{{ item.title }}">  
      {% endif %}  
    </a>
     
    <div class="product-extra-mask">
       <div class="product-extra-link">
          <a  class="action product-quick-view"  href="{{ item.url | within: current_collection }}"><span class="lnr lnr-magnifier"></span></a>
      </div>
    </div>  

     <div class="product-box-promotion">
       {% if sold_out %}
          <div class="badge badge--sold-out saleoff"><span class="badge-label">{{ 'products.product.sold_out' | t }}</span></div>
        {% elsif on_sale %}
            <span class="sale-item">-{{ item.compare_at_price | minus: item.price | times: 100.0 | divided_by: item.compare_at_price | money_without_currency | times: 100 | remove: '.0'}}%</span>
        {% endif %}
     </div>

  </div>
    

    <div class="item-product-info">
      <h3 class="title-product"><a href="{{ product.url | within: current_collection }}" class="product-title">{{ item.title }}</a></h3>

      <div class="info-price product-item--price price">
        <span class="">
          {% include 'price' with item.price %}
        </span>   
        {% if on_sale %}

          {%if settings.product_show_price_compare_at_price == 'save' %}

            <div class="sale-tag {% if settings.product_reviews_enable %} has-reviews{% endif %}">
              {% assign compare_price = item.compare_at_price %}
              {% assign product_price = item.price %}
              {% include 'price-sale' %}
            </div>
            {% else %}
              <del>{% include 'price' with item.compare_at_price %}</del>
          {% endif %}

        {% endif %}
        
      </div>
      {% if item.featured_image %}
        {% if settings.product_reviews_enable %}
          <span class="shopify-product-reviews-badge" data-id="{{ item.id }}"></span>
        {% endif %}
      {% else %}  
        <div class="rte">
          {{ item.content | strip_html | truncatewords: 20 }}
        </div>        
      {% endif %}        
    </div>
  </div>

</div>




