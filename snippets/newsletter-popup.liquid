<!-- Begin MailChimp Signup Form -->

<div id="mc_embed_signup" class="newsletter-popup window " style="display:none">

<!--End mc_embed_signup-->
	<h2 class="title-popup">{{'layout.footer.newsletter_title' | t }}</h2>
	<a href="#" class="close-popup"><span class="lnr lnr-cross"></span></a>
	<div class="content-popup">
		<div class="row">
			<div class="col-md-6 col-sm-6 col-xs-12 hidden-xs">
				<div class="newsletter-popup-thumb">
					<img src="https://cdn.shopify.com/s/files/1/1184/2838/files/newsletter.png" alt="newsletter.png" />
				</div>
			</div>
			<div class="col-md-6 col-sm-6 col-xs-12">
				<div class="newsletter-popup-info">
					<h3>{{settings.mailling_list_title}}</h3>
					<p>{{settings.mailling_list_desc}}</p>
					
					<!-- //myshopify.us13.list-manage.com/subscribe/post?u=60cdef5f425906b2bdfa01f06&amp;id=00d167a4f0 -->
					<form action="{{settings.mailing_list_form_action}}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>

					  <div id="mc_embed_signup_scroll">
						<label for="mce-EMAIL"><span class="hidden">Subscribe to our mailing list</span></label>
						<input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="{{'layout.footer.newsletter_email_placeholder' | t }}" required>
					    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
					    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_60cdef5f425906b2bdfa01f06_00d167a4f0" tabindex="-1" value=""></div>
					    
					    <input type="submit" value="{{'layout.footer.newsletter_sign_up' | t }}" name="subscribe" id="mc-embedded-subscribe" class="button">
					    <p><input type="checkbox" id="checkform" /> <label for="checkform">{{'layout.footer.newsletter_dont_show' | t}}</label></p>
					    
					    </div>
					</form>
				</div>
			</div>
		</div>
	</div>

</div>
<script>

 (function($) {

 	$('#mc-embedded-subscribe-form').ajaxChimp();

    var popupNewsletter = {
      init: function() {
        try
        {
          if ($.cookie('popupNewsletter') != 'disable') {
            this.checkboxEvent();
            var pause = $('#newsletter-btn').attr('data-pause');
            setTimeout(function() {
            
		      $("#newsletter-btn").trigger('click');
              var date = new Date();
              var minutes = 1;
              date.setTime(date.getTime() + (minutes * 60 * 1000));
              $.cookie('popupNewsletter', 'disable', {expires:date, path:'/'});
            }, pause);
          }
        }
        catch (err) {} // ignore errors reading cookies
      },
      checkboxEvent: function() {
        $('#checkform').change(function(){
          if ($(this).is(':checked')) {
            $.cookie('popupNewsletter', 'disable', {expires:1, path:'/'});
          } else {
            $.cookie("popupNewsletter", null, { path: '/' });
          }
        });
      }
    };

    $(document).ready(function() {
    	if($("#newsletter-btn").length > 0){
          $("#newsletter-btn").fancybox({
            'titleShow'   : false,
            'padding'   : 0
          });
        }
      popupNewsletter.init();
    });

  })(jQuery)



</script>