 <div class="container">
  <div class="row">
   {% for i in (1..3) %}

      {% capture banner_img %}banner_item_{{ i }}_img.png{% endcapture %}
      {% capture banner_title %}banner_item_{{ i }}_title{% endcapture %}
      {% capture banner_subtitle %}banner_item_{{ i }}_subtitle{% endcapture %}
      {% capture banner_text %}banner_item_{{ i }}_text{% endcapture %}
      {% capture banner_btn %}banner_item_{{ i }}_btn{% endcapture %}
      {% capture banner_link %}banner_item_{{ i }}_link{% endcapture %}


      {% assign class_item = 'box-left' %}
      {% if i == 2 %}
        {% assign class_item = 'box-center'%}
      {% elsif i == 3 %}
        {% assign class_item = 'box-right'%}
      {% endif %}

    <div class="col-md-4 col-sm-4 col-xs-12">
      <div class="banner-box banner-style1 {{class_item}}">
        <a href="{{banner_link}}" class="banner-box-link">
          {{ banner_img | asset_url | img_tag: banner_img }}
        </a>
        <div class="banner-box-info">
            
          {% if settings[banner_title] != blank  %}
            <h2 class="title-banner-box-yellow"><span>{{ settings[banner_title] }}</span></h2>
          {% endif %}

          {% if settings[banner_subtitle] != blank %}
            <h2 class="title-banner-box-blue"><span>{{settings[banner_subtitle]}}</span></h2>
          {% endif %} 

          {% if settings[banner_text]  != blank %}
          <p class="desc">{{ settings[banner_text] }}</p>
          {% endif %}

          {% if settings[banner_btn]  != blank %}
          <a href="{{ settings[banner_link] }}" class="btn-box-banner">{{ settings[banner_btn] }}</a>                            
          {% endif %}   

        </div>
      </div>
    </div>

  {% endfor %}

  </div>
</div>