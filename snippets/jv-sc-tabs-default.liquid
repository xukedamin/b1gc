<div class="nav-tabs-default-wrap">
	<div class="nav-tabs-default">
	<ul class="nav nav-tabs" role="tablist">
	{% for i in (1..4) %}
		{% capture tab_item_title %}tab_item_{{ i }}_title{% endcapture %}
		{% capture tab_item_icon %}tab_item_{{ i }}_icon{% endcapture %}
		{% capture tab_item_text %}tab_item_{{ i }}_text{% endcapture %}


		{% if settings[tab_item_title] != blank %}
			<li role="presentation" class="{% if i == 1 %} active {% endif %}"><a href="#tab-item{{i}}" aria-controls="tab-item{{i}}" role="tab" data-toggle="tab">{{settings[tab_item_title]}}</a></li>
		{% endif %}  
	{% endfor %}
	</ul>
	</div>

	<!-- Tab panes -->
	<div class="tab-content">
	{% for i in (1..4) %}
		{% capture tab_item_title %}tab_item_{{ i }}_title{% endcapture %}
		{% capture tab_item_icon %}tab_item_{{ i }}_icon{% endcapture %}
		{% capture tab_item_text %}tab_item_{{ i }}_text{% endcapture %}

		{% if settings[tab_item_title] != blank %}
			
				<div role="tabpanel" class="tab-pane {% if i == 1 %} active {% endif %}" id="tab-item{{i}}">
					<p>{{settings[tab_item_text]}}</p>
				</div>
				
		{% endif %}  
	{% endfor %}
	</div>
</div>
<script>
	function randomID() {
  return '_' + Math.random().toString(36).substr(2, 9);
};

if(jQuery('.nav-tabs-default-wrap').length > 1)
{
	var list = jQuery('.nav-tabs-default-wrap .nav-tabs-default a[role=tab]');
	var panels = jQuery('.nav-tabs-default-wrap .tab-content .tab-pane');

	for (var i = list.length - 1; i >= 0; i--) {
		var random =  randomID();
		jQuery(list[i]).attr('href', jQuery(list[i]).attr('href') + random);
		jQuery(panels[i]).attr('id', jQuery(panels[i]).attr('id') + random);
	}
}

</script>