/*============================================================================
#Breakpoint and Grid Variables
==============================================================================*/
$viewportIncrement: 1px;

$small: 480px;
$medium: 768px;
$large: 769px;

$postSmall: $small + $viewportIncrement;
$preMedium: $medium - $viewportIncrement;
$preLarge: $large - $viewportIncrement;


/*============================================================================
#General Variables
==============================================================================*/

// Mobile Nav Bar
$mobileNavBarHeight: 50px;

// Width variables
$gutter: 30px;
$gridGutter: 30px;

// Radius
$radius: 2px;

// Password page
$passwordPageUseBgImage: true;


/*================ Typography ================*/

body{

  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  text-rendering: optimizeLegibility;

  background-color:{{ settings.color_body_bg }};
  color: {{ settings.color_body_text }};
  font-size: {{ settings.font_type_base_size }};
  font-weight: {{ settings.font_weight_body }};
  line-height: {{ settings.line_height_body }};
  font-family:  {{ settings.font_type_base_family }}
}

.h1,h1 {
    font-size: {{settings.size_heading_h1}}px
}

.h2,h2 {
    font-size: {{settings.size_heading_h2}}px
}

.h3,h3 {
    font-size: {{settings.size_heading_h3}}px
}

.h4,h4 {
    font-size: {{settings.size_heading_h4}}px
}

.h5,h5 {
    font-size: {{settings.size_heading_h5}}px
}

.h6,h6 {
    font-size: {{settings.size_heading_h6}}px
}


/*============================================================================
#Dropdown Menu
==============================================================================*/

.dropdownMenu > li > a {
  font-family: {{ settings.mega_main_family }};
}

.dropdownMenu li ul li a{
    {% if settings.mega_sub_family != '0' %}
      font-family: {{ settings.mega_sub_family }};
    {% endif %}
}


