<main class="main-content">
  <div class="container"> {% include 'breadcrumb' %} </div>

  <div class="common-static-header">
    <div class="parallax-bg" data-stellar-background-ratio="0.25"
      {% if page.metafields.jvpage.titleBackground != blank %}
        style="background-image:url({{ page.metafields.jvpage.titleBackground }})"
      {% endif %} ></div>
    <div class="container">
      <h1 >
      <span>
        {% if current_tags %}
          {{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}
        {% else %}
          {{ blog.title }}
        {% endif %}
      </span>
      </h1>
    </div>
</div>

<section role="main" class="wrapper-content full-content">
<div class="container">

  {% paginate blog.articles by 8 %}

  <div class="row">
    <div class="col-md-9 col-sm-9 col-xs-12 content-blog-page">
      <div class="row masonry-container">
        
        {% for article in blog.articles %}
          {%include 'blog--masonry-item' %}
          {% endfor %}
        </div>
        

        {% if paginate.pages > 1 %}
        <div class="post-pagi-nav">
          <div class="pagination">
            {% include 'pagination-custom' %}
          </div>
        </div>
        {% endif %}

      </div>
      <script language="javascript">
      jQuery(function($){

        var $container = $('.masonry-container').imagesLoaded(function(){
            $container.masonry({
              itemSelector: '.itemMasonry'
            });
        });
      });

      </script>
      <aside class="sidebar-blog col-md-3 col-sm-3 col-xs-12">
        {% include 'blog-sidebar' %}
      </aside>
    </div>
  {% endpaginate %}
</div>
</section>
</main>