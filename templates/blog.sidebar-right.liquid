<main class="main-content">

 {% if page.metafields.jvpage.breadcrumb != 'hide'  %}  
  <div class="container"> {% include 'breadcrumb' %} </div>
  {% endif %}  

{% if page.metafields.jvpage.titlePage != 'hide'  %}
  <div class="common-static-header">
    <div class="parallax-bg" data-stellar-background-ratio="0.25"
      {% if settings.bg_page_blog_enable %}
        style="background-image:url({{ 'bg_page_blog.jpg' | asset_url }})"
      {% endif %}
    ></div>
    <div class="container">
      <h1 >
      <span>
        {% if current_tags %}
          {{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}
        {% else %}
          {{ blog.title }}
        {% endif %}
      </span>
      </h1>
    </div>
  </div>
{% endif %}

  <section role="main" class="wrapper-content full-content  {% if page.metafields.jvpage.spaceContent == 'no'  %} no-padding  {% endif %}">
    <div class="container">

      {% paginate blog.articles by 5 %}

      <div class="row">
        <div class="col-md-9 blog-list blog-main-left has-sidebar">
          
          {% for article in blog.articles %}
            
           {%include 'blog--list-item'%}

          {% endfor %}

          {% if paginate.pages > 1 %}
            <div class="post-pagi-nav">
              <div class="pagination ">
                {% include 'pagination-custom' %}
              </div>
            </div>
          {% endif %}
        </div>

        <aside class="sidebar-blog col-md-3">
          {% include 'blog-sidebar' %}
        </aside>

      </div>

    {% endpaginate %}

    </div>
  </section>
</main>